<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Repartidores_GoDeliverix.Views.Popup.Ajustes_FechaDeNacimiento"
                  BindingContext="{Binding VMMain, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="20,20,20,20" >
            <StackLayout BindingContext="{Binding MVAjustes}" Orientation="Vertical" BackgroundColor="#f1f1f1" Padding="10,10,10,10">

                <Label FontSize="Large" Text="Fecha de Nacimiento"></Label>

                <DatePicker  Date="{Binding StrFechaDeNacimiento,Mode=TwoWay}"></DatePicker>

                <Button Text="Guardar" FontSize="Large" Clicked="CloseWindowsPopup" Command="{Binding IsSavingBirthday}" TextColor="White"  BackgroundColor="Green"></Button>
                <Button Text="Cancelar" FontSize="Large" TextColor="White"  BackgroundColor="Red" Clicked="CloseWindowsPopup" ></Button>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>