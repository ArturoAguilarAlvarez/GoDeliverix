<Window x:Class="DeliverixSucursales.NotasDeproductos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliverixSucursales"
        mc:Ignorable="d"
        Title="Aviso" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  Width="800" Height="200" WindowStyle="None">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"  Background="Purple">
            <Label x:Name="lblNombreProducto" HorizontalAlignment="Center" FontSize="40" Foreground="White"></Label>
        </StackPanel>
        <StackPanel Grid.Row="1"  Background="#f1f1f1">
            <TextBlock x:Name="txbNota" HorizontalAlignment="Center" FontSize="30"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2"  Background="#f1f1f1">
            <Button Width="100" Height="50" Background="Purple" Content="Aceptar" x:Name="btnAceptar" Click="btnAceptar_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
