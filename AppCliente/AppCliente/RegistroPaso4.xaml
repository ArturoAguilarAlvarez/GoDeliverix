<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCliente.RegistroPaso4">
    <ContentPage.Content>
        <FlexLayout
            Direction="Column"
            JustifyContent="SpaceBetween"
            Padding="40,20,40,20">
            <StackLayout
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand">

                <StackLayout 
                        Margin="20"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Label
                            FontAttributes="Bold"
                            TextColor="Black"
                            FontSize="22" 
                            Text="Datos de contacto">
                    </Label>
                    <StackLayout
                            BackgroundColor="Black"
                            HorizontalOptions="Center">
                        <Label
                                TextColor="White"
                                Padding="10,0,10,0"
                                Text="4/5">
                        </Label>
                    </StackLayout>
                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Correo Electronico*"></Label>
                    <Entry Placeholder="Correo Electronico" x:Name="txrCorreo" Keyboard="Email"/>
                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Numero de Telefono*"></Label>
                    <Entry Placeholder="Numero de Telefono"  x:Name="txtNumeroTelefono" Keyboard="Telephone"/>
                </StackLayout>
            </StackLayout>
            
            <Button 
                Text="Siguiente" 
                BackgroundColor="#dd5d16" 
                Clicked="Button_Guardar" 
                TextColor="White">
            </Button>
        </FlexLayout>
        
