<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCliente.RegistroPaso1">
    <ContentPage.Content>

        <FlexLayout 
            Padding="40,20,40,20"            
            Direction="Column"
            JustifyContent="SpaceBetween">

            <StackLayout
                Orientation="Vertical">

                <Image Source="IconoRegistro.png"
                  VerticalOptions="End"
                  HorizontalOptions="Center"
                  HeightRequest="200"
                  WidthRequest="200"
                  ></Image>
                
                <StackLayout 
                    Margin="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        TextColor="Black"
                        FontSize="22" 
                        Text="Bienvenido a GoDeliverix">
                    </Label>
                    <StackLayout
                        BackgroundColor="Black"
                        HorizontalOptions="Center">
                        <Label
                            TextColor="White"
                            Padding="10,0,10,0"
                            Text="1/5">
                        </Label>
                    </StackLayout>
                </StackLayout>
                <Label
                    Text="Con GoDeliverix encuentras lo que necesitas desde la comodidad de su casa"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center">
                </Label>

            </StackLayout>

            <Button 
                Text="Siguiente" 
                BackgroundColor="#dd5d16" 
                Clicked="Button_Siguiente" 
                TextColor="White">
            </Button>

        </FlexLayout>

