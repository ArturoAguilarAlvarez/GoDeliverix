                <ListView x:Name="MyListViewHistorial"
                                   ItemTapped="MyListViewHistorial_ItemTapped"
                        IsPullToRefreshEnabled="False"
                        HasUnevenRows="True">   
                    <!--Custom View Cells-->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame OutlineColor="Accent" HorizontalOptions="Fill"
                                     Padding="10" Margin="0,0,0,10">
                                    <Grid Margin="0" Padding="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="7*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Label 
                                            Text="{Binding LNGFolio }" 
                                            HorizontalOptions="Center" 
                                            Grid.Row="0" Grid.RowSpan="3" 
                                            Grid.Column="0" 
                                            VerticalOptions="Center"
                                            FontSize="Large"></Label>

                                        <Label 
                                            Text="{Binding FechaDeOrden,StringFormat='Fecha: {0}'}" 
                                            HorizontalOptions="Start" 
                                            Grid.Row="0" Grid.Column="1"></Label>
                                        <Label 
                                            Text="{Binding StrNota,StringFormat='Hora: {0}'}" 
                                            HorizontalOptions="Start" 
                                            Grid.Row="1" Grid.Column="1"></Label>
                                        <Label 
                                            Text="{Binding MTotal,StringFormat='Total $:{0}'}" 
                                            HorizontalOptions="Start" 
                                            Grid.Row="2" 
                                            Grid.Column="1"></Label>
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
     
        </StackLayout>
    </ContentPage.Content>
</ContentPage>