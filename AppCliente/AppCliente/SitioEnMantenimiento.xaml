             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Sitio en mantenimiento"
             x:Class="AppCliente.SitioEnMantenimiento">
    <ContentPage.Content>
        <FlexLayout
            Direction="Column"
            JustifyContent="Center"
            Padding="40,20,40,20">
            
            <Image Source="IconoGoDeliverix.png"></Image>
            
            <Label Text="Lost servicios de GoDeliverix no estan disponibles temporalmente, intentelo mas tarde."
