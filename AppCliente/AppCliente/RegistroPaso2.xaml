<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCliente.RegistroPaso2">
    <ContentPage.Content>
        <FlexLayout
            Padding="40,20,40,20"
            Direction="Column"
            JustifyContent="SpaceBetween">

            <StackLayout
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand">

                <StackLayout 
                    Margin="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        TextColor="Black"
                        FontSize="22" 
                        Text="Datos de usuario">
                    </Label>
                    <StackLayout
                        BackgroundColor="Black"
                        HorizontalOptions="Center">
                        <Label
                            TextColor="White"
                            Padding="10,0,10,0"
                            Text="2/5">
                        </Label>
                    </StackLayout>
                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Nombre de usuario*"></Label>
                    <Entry x:Name="txtUsuario" Placeholder="Nombre de Usuario"></Entry>
                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Contraseña*"></Label>
                    <Entry x:Name="txtContrasena1" IsPassword = "true" Placeholder="Contraseña"></Entry>
                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Confirmar Contraseña*"></Label>
                    <Entry x:Name="txtContrasena2" IsPassword = "true" Placeholder="Confirmar Contraseña"></Entry>
                </StackLayout>
            </StackLayout>

            <Button 
                Text="Siguiente" 
                BackgroundColor="#dd5d16" 
                Clicked="Button_Siguiente" 
                TextColor="White">
            </Button>

        </FlexLayout>
